{
  "name": "deno-monorepo-poc",
  "version": "1.0.0",
  "private": true,
  "description": "Deno monorepo with pnpm workspaces",
  "scripts": {
    "dev:backend": "cd packages/apps/modular-monolith && deno task dev",
    "dev:front": "pnpm --filter @deno-monorepo-poc/front dev",
    "build:backend": "cd packages/apps/modular-monolith && deno task build",
    "build:front": "pnpm --filter @deno-monorepo-poc/front build",
    "build": "pnpm -r build",
    "test:backend": "cd packages/apps/modular-monolith && deno test -A",
    "test:front": "pnpm --filter @deno-monorepo-poc/front test",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/*/node_modules",
    "fmt": "pnpm -r fmt"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.0",
    "@semantic-release/npm": "^13.1.1",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "pnpm": "^10.18.3",
    "semantic-release": "^24.2.9"
  },
  "packageManager": "pnpm@10.18.3+sha512.bbd16e6d7286fd7e01f6b3c0b3c932cda2965c06a908328f74663f10a9aea51f1129eea615134bf992831b009eabe167ecb7008b597f40ff9bc75946aadfb08d"
}
