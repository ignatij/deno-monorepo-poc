{
  "repositoryUrl": "https://github.com/ignatij/deno-monorepo-poc",
  "branches": ["main"],
  "tagFormat": "front-v${version}",
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    ["@semantic-release/changelog", { "changelogFile": "CHANGELOG.md" }],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "node scripts/update_version.js ${nextRelease.version}"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["package.json", "CHANGELOG.md"],
        "message": "chore(release): frontend ${nextRelease.version} [skip ci]"
      }
    ]
  ]
}
