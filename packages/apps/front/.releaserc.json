{
  "repositoryUrl": "https://github.com/ignatij/deno-monorepo-poc",
  "branches": ["main"],
  "tagFormat": "v${version}-front",
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    ["@semantic-release/changelog", { "changelogFile": "CHANGELOG.md" }],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "deno run -A scripts/update_version.ts ${nextRelease.version}"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["package.json", "CHANGELOG.md"],
        "message": "chore(release): frontend ${nextRelease.version} [skip ci]"
      }
    ]
  ]
}