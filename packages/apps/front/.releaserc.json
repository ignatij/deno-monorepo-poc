{
  "repositoryUrl": "https://github.com/ignatij/deno-monorepo-poc",
  "branches": ["main"],
  "tagFormat": "front-v${version}",
  "plugins": [
    ["@semantic-release/commit-analyzer", {
      "preset": "conventionalcommits",
      "releaseRules": [
        {"scope": "front", "release": "minor"},
        {"scope": "modular-monolith", "release": false},
        {"type": "docs", "release": false}
      ]
    }],
    "@semantic-release/release-notes-generator",
    ["@semantic-release/changelog", { "changelogFile": "CHANGELOG.md" }],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "node scripts/update_version.js ${nextRelease.version} && npx prettier --write package.json CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["package.json", "CHANGELOG.md", "README.md"],
        "message": "chore(release): frontend ${nextRelease.version} [skip ci]"
      }
    ]
  ]
}
