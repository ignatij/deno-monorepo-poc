{
  "branches": ["main"],
  "tagFormat": "modular-monolith-v${version}",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          { "scope": "modular-monolith", "type": "feat", "release": "minor" },
          { "scope": "modular-monolith", "type": "fix", "release": "patch" },
          { "scope": "modular-monolith", "type": "perf", "release": "patch" },
          { "scope": "modular-monolith", "breaking": true, "release": "major" },
          { "scope": "!modular-monolith", "release": false }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      { "preset": "conventionalcommits" }
    ],
    ["@semantic-release/changelog", { "changelogFile": "CHANGELOG.md" }],
    ["@semantic-release/npm", { "npmPublish": false }],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md", "package.json"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\\n\\n${nextRelease.notes}"
      }
    ]
  ]
}
