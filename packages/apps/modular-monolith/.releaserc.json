{
  "repositoryUrl": "https://github.com/ignatij/deno-monorepo-poc",
  "branches": ["main"],
  "tagFormat": "modular-monolith-v${version}",
  "plugins": [
    ["@semantic-release/commit-analyzer", {
      "preset": "conventionalcommits",
      "releaseRules": [
        {"scope": "modular-monolith", "release": "minor"},
        {"scope": "front", "release": false},
        {"type": "docs", "release": false}
      ]
    }],
    "@semantic-release/release-notes-generator",
    ["@semantic-release/changelog", { "changelogFile": "CHANGELOG.md" }],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "deno run -A scripts/update_version.ts ${nextRelease.version} && deno fmt ."
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["deno.json", "CHANGELOG.md", "README.md"],
        "message": "chore(release): ${nextRelease.version} [skip ci]"
      }
    ]
  ]
}
