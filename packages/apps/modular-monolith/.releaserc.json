{
  "repositoryUrl": "https://github.com/ignatij/deno-monorepo-poc",
  "branches": ["main"],
  "tagFormat": "modular-monolith-v${version}",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "releaseRules": [
          { "type": "feat", "scope": "modular-monolith", "release": "minor" },
          { "type": "fix", "scope": "modular-monolith", "release": "patch" },
          { "type": "perf", "scope": "modular-monolith", "release": "patch" },
          { "type": "revert", "scope": "modular-monolith", "release": "patch" },
          { "type": "refactor", "scope": "modular-monolith", "release": "patch" },
          { "type": "docs", "scope": "modular-monolith", "release": false },
          { "type": "style", "scope": "modular-monolith", "release": false },
          { "type": "chore", "scope": "modular-monolith", "release": false },
          { "type": "test", "scope": "modular-monolith", "release": false },
          { "type": "build", "scope": "modular-monolith", "release": false },
          { "type": "ci", "scope": "modular-monolith", "release": false },
          { "type": "feat", "scope": "shared", "release": "minor" },
          { "type": "fix", "scope": "shared", "release": "patch" }
        ],
        "parserOpts": {
          "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES"]
        }
      }
    ],
    "@semantic-release/release-notes-generator",
    ["@semantic-release/changelog", { "changelogFile": "CHANGELOG.md" }],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "deno run -A scripts/update_version.ts ${nextRelease.version} && deno fmt ."
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["deno.json", "CHANGELOG.md", "README.md"],
        "message": "chore(release): ${nextRelease.version} [skip ci]"
      }
    ]
  ]
}
